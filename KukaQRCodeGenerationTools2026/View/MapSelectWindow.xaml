<Window x:Class="KukaQRCodeGenerationTools2026.View.MapSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KukaQRCodeGenerationTools2026.View"
        xmlns:vm="clr-namespace:KukaQRCodeGenerationTools2026.ViewModel"
        mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=vm:MapSelectWindowViewModel}"
        Title="MapSelectWindow" Height="450" Width="800">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <DataGrid CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False"
                  ItemsSource="{Binding MapList}"
                  SelectedIndex="{Binding SelectedMapIndex}"
                  SelectionMode="Single"
                  RowHeaderWidth="0"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="所属地图" Width="170" Binding="{Binding MapName}" />
                <DataGridTextColumn Header="片区编号" Width="150" Binding="{Binding FloorNumber}" />
                <DataGridTextColumn Header="片区别名" Width="140" Binding="{Binding FloorName}" />
                <DataGridTextColumn Header="仓库编码" Width="140" Binding="{Binding BuildingCode}" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Content="确认" Height="28" Width="65"
                    Command="{Binding SelectMapCommand}"/>
            <TextBlock Text="在表格中选定地图后，点击&quot;确认&quot;按钮"
                       VerticalAlignment="Center" Margin="8,0,0,0"
                       Foreground="Gray"/>
        </StackPanel>

        <!--<StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Content="上一页" Height="28" Width="65" />

            <Label Width="30" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="8,0,0,0">
                <Label.Content>
                    <TextBlock Text="1" />
                </Label.Content>
            </Label>
            <TextBlock Text="/" VerticalAlignment="Center" Margin="4,0,4,0" />
            <Label Width="30" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="0,0,8,0">
                <Label.Content>
                    <TextBlock Text="1" />
                </Label.Content>
            </Label>

            <Button Content="下一页" Height="28" Width="65" />
        </StackPanel>-->
    </Grid>
</Window>
